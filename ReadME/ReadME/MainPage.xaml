<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ReadME.MainPage">
    <VerticalStackLayout Spacing="20">

        <SearchBar Placeholder="Rechercher"/>

        <Label Text="Nouveautés" TextDecorations="Underline" FontSize="20"/>
        <ScrollView Orientation="Horizontal" HorizontalScrollBarVisibility="Never">
            <HorizontalStackLayout Spacing="10">
                <BoxView Color="Gray" HeightRequest="200" WidthRequest="130"/>
                <BoxView Color="Gray" HeightRequest="200" WidthRequest="130"/>
                <BoxView Color="Gray" HeightRequest="200" WidthRequest="130"/>
                <BoxView Color="Gray" HeightRequest="200" WidthRequest="130"/>
            </HorizontalStackLayout>
        </ScrollView>

        <Label Text="Horreur" TextDecorations="Underline" FontSize="20"/>
        <ScrollView Orientation="Horizontal" HorizontalScrollBarVisibility="Never">
            <HorizontalStackLayout Spacing="10">
                <BoxView Color="Gray" HeightRequest="200" WidthRequest="130"/>
                <BoxView Color="Gray" HeightRequest="200" WidthRequest="130"/>
                <BoxView Color="Gray" HeightRequest="200" WidthRequest="130"/>
                <BoxView Color="Gray" HeightRequest="200" WidthRequest="130"/>
            </HorizontalStackLayout>
        </ScrollView>
        <!--<Grid RowDefinitions="200"
              ColumnDefinitions="*, *, *"
              ColumnSpacing="10">
            <BoxView Color="Gray"/>
            <BoxView Color="Gray" Grid.Column="1" Grid.Row="0"/>
            <BoxView Color="Gray" Grid.Column="2" Grid.Row="0"/>

        </Grid>-->

    </VerticalStackLayout>
</ContentPage>
