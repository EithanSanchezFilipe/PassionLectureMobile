<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ReadME.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ReadME"
    Shell.FlyoutBehavior="Disabled"
    Title="ReadME">
    <Tab Title="Home">
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />
    </Tab>
    <Tab Title="Book">
        <ShellContent
            Title="Book"
            ContentTemplate="{DataTemplate local:Book}"
            Route="Book" />
    </Tab>
</Shell>
